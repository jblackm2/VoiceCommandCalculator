<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"

        android:orientation="horizontal"
        android:columnCount="4"
        android:layout_gravity="center"
        tools:context="com.cs510sla.handsfreecalculator.CalcActivity">

        <TextView
            android:id="@+id/answerText"
            android:text=""
            android:textSize="32sp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:theme="@style/answerBox"
            android:layout_height="100dp" />
        <Button
            android:id="@+id/clearButton"
            android:text="@string/clear"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/posNegButton"
            android:text="@string/pos_neg"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/modButton"
            android:text="@string/modulo"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/divButton"
            android:text="@string/divide"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/leftParenButton"
            android:text="("
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/rightParenButton"
            android:text=")"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/powerButton"
            android:text="^"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/piButton"
            android:text="PI"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num7Button"
            android:text="@string/_7"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num8Button"
            android:text="@string/_8"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num9Button"
            android:text="@string/_9"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/timesButton"
            android:text="@string/times"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num4Button"
            android:text="@string/_4"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num5Button"
            android:text="@string/_5"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num6Button"
            android:text="@string/_6"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/minusButton"
            android:text="@string/minus"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num1Button"
            android:text="@string/_1"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num2Button"
            android:text="@string/_2"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num3Button"
            android:text="@string/_3"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/plusButton"
            android:text="@string/plus"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/num0Button"
            android:text="@string/_0"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/decimalButton"
            android:text="@string/decimal"
            android:theme="@style/MyButton"/>
        <Button
            android:id="@+id/equalsButton"
            android:text="@string/equals"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:theme="@style/MyButton"/>

    </GridLayout>
    <ImageButton
        android:id="@+id/voiceButton"
        android:layout_margin="90dp"
        android:layout_gravity="center"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_btn_speak_now" />
</LinearLayout>






